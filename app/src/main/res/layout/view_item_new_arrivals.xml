<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_news_arrival_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_gray"
            android:layout_marginTop="@dimen/margin_xxlarge">

            <TextView
                android:id="@+id/tv_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_book_title"
                android:layout_marginLeft="130dp"
                android:textStyle="bold"
                android:textSize="@dimen/text_regular_2x"
                android:layout_marginTop="@dimen/margin_medium_2"/>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="@string/lbl_description"
                android:layout_below="@+id/tv_book_title"
                android:layout_alignStart="@+id/tv_book_title"
                android:lineSpacingMultiplier="1.3"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_book_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:src="@drawable/image1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/up_arrow"
            android:layout_marginTop="@dimen/margin_medium_3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_medium_2"/>

        <TextView
            android:id="@+id/tv_statistical_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_news_arrival_layout"
            android:padding="@dimen/margin_medium"
            android:text="3 Likes - 3 Comments - Sent to 6 people"
            android:clickable="true"
            android:layout_marginLeft="@dimen/margin_medium_3"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>